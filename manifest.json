{
  "manifest_version": 2,

  "name": "Distraction Blocker",
  "description": "This extension blocks request to specific hosts",
  "version": "1.0",

  "options_page": "options.html",

  "browser_action": {
    "default_icon": "circle-icon.png",
    "default_popup": "popup.html",
    "default_title": "Distraction Blocker"
  },
  "permissions": ["webRequest", "webRequestBlocking",
                  "*://*/*", "webNavigation", "tabs", "activeTab", "history",
                  "storage"],
  "background": {
    "scripts": ["eventPage.js"]
  }
}
