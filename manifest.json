{
  "manifest_version": 2,

  "name": "Distraction Blocker",
  "description": "This extension blocks request to specific hosts",
  "version": "1.0",

  "browser_action": {
    "default_icon": "circle-icon.png",
    "default_popup": "popup.html",
    "default_title": "Distraction Blocker"
  },
  "permissions": [
    "activeTab",
    "https://ajax.googleapis.com/"
  ],
  "background": {
    "scripts": ["eventPage.js"],
    "persistent": false
  },
}
